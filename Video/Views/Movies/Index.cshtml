@model IEnumerable<Video.Models.Movie>
<h1>List of Movies</h1>

@Html.ActionLink("Add Movie", "New")
<div class="row">
    <div class="col-md-12">
        <table>
            <tbody>
                <tr>
                    <td><b>Movies</b></td>
                    @foreach(var i in Model)
                    {
                        <td>@Html.ActionLink(i.Name, "Details", new { id = i.Id })</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>